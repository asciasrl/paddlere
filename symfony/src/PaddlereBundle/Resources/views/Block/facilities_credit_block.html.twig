{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box">
        <div class="box-header"><h3 class="box-title">{{ settings.title }}</h3></div>
        <div class="box-body">
            <table class="table table-hover">
                {% for facility in facilities %}
                    <tr {% if facility.credit <= 0 %}class="danger"{% elseif facility.credit < 1000 %}class="warning"{% endif %}>
                        <td><a href="{{ path('admin_paddlere_facility_show', {'id': facility.id}) }}">{{ facility.name }}</td>
                        <td>{{ facility.credit }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td>No facility available.</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}